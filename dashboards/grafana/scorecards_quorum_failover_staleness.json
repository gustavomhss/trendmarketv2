  ],
  "title": "Sprint 6 Scorecard Metrics",
  "title": "Scorecards Quorum Failover Staleness",
  "uid": "s6-scorecards",
  "schemaVersion": 40,
  "version": 1,
  "timezone": "browser",
  "refresh": "5m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Quorum ratio",
      "type": "stat",
      "gridPos": {"h": 4, "w": 5, "x": 0, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "avg(scorecard_quorum_ratio)"
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Quorum Ratio",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "avg(mbp:oracle:quorum_ratio{env=\"prod\"})"
        }
      ]
    },
    {
      "id": 2,
      "title": "Failover time p95 (s)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 5, "x": 5, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(scorecard_failover_time_seconds_bucket[5m])) by (le))"
      "type": "stat",
      "title": "Failover p95 (s)",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "avg(mbp:oracle:failover_time_p95_s{env=\"prod\"})"
        }
      ]
    },
    {
      "id": 3,
      "title": "Replica staleness p95 (s)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 5, "x": 10, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(scorecard_replica_staleness_seconds_bucket[5m])) by (le))"
      "type": "stat",
      "title": "Staleness p95 (s)",
      "datasource": null,
      "targets": [
        {
          "refId": "A",
          "expr": "avg(mbp:oracle:staleness_p95_s{env=\"prod\"})"
        }
      ]
    },
    {
      "id": 4,
      "title": "CDC lag p95 (s)",
