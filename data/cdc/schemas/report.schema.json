{
  "$id": "https://trendmarketv2.local/schemas/report.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Scorecard Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "schema_version",
    "timestamp_utc",
    "status",
    "metrics",
    "inputs",
    "bundle"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.sprint6.report"
    },
    "schema_version": {
      "type": "integer",
      "const": 2
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "quorum_ratio",
        "failover_time_p95_s",
        "staleness_p95_s",
        "cdc_lag_p95_s",
        "divergence_pct"
      ],
      "properties": {
        "quorum_ratio": {
          "$ref": "#/definitions/metric_result"
        },
        "failover_time_p95_s": {
          "$ref": "#/definitions/metric_result"
        },
        "staleness_p95_s": {
          "$ref": "#/definitions/metric_result"
        },
        "cdc_lag_p95_s": {
          "$ref": "#/definitions/metric_result"
        },
        "divergence_pct": {
          "$ref": "#/definitions/metric_result"
        }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["thresholds", "metrics"],
      "properties": {
        "thresholds": {
          "$ref": "#/definitions/input_descriptor_thresholds"
        },
        "metrics": {
          "$ref": "#/definitions/input_descriptor_metrics"
        }
      }
    },
    "bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sha256"],
      "properties": {
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    }
  },
  "definitions": {
    "metric_result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observed", "target", "ok"],
      "properties": {
        "observed": {
          "type": "number"
        },
        "target": {
          "type": "number"
        },
        "ok": {
          "type": "boolean"
        }
      }
    },
    "input_descriptor_thresholds": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "schema_version", "timestamp_utc"],
      "properties": {
        "schema": {
          "type": "string",
          "const": "trendmarketv2.sprint6.thresholds"
        },
        "schema_version": {
          "type": "integer",
          "const": 2
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "input_descriptor_metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["schema", "schema_version", "timestamp_utc"],
      "properties": {
        "schema": {
          "type": "string",
          "const": "trendmarketv2.sprint6.metrics"
        },
        "schema_version": {
          "type": "integer",
          "const": 2
        },
        "timestamp_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
