{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://trendmarketv2/schemas/fee.update.v1.json",
  "title": "Dynamic Fee Update",
  "type": "object",
  "properties": {
    "schema_version": {"const": 1},
    "ts": {"type": "string", "format": "date-time"},
    "symbol": {"type": "string", "minLength": 1},
    "fee": {"type": "number", "minimum": 0},
    "components": {
      "type": "object",
      "properties": {
        "base": {"type": "number", "minimum": 0},
        "alpha_vol": {"type": "number"},
        "beta_depth": {"type": "number"}
      },
      "required": ["base", "alpha_vol", "beta_depth"],
      "additionalProperties": false
    },
    "bounds": {
      "type": "object",
      "properties": {
        "minimum": {"type": "number", "minimum": 0},
        "maximum": {"type": "number", "minimum": 0}
      },
      "required": ["minimum", "maximum"],
      "additionalProperties": false
    },
    "cooldown": {"type": "boolean"},
    "delta_pct": {"type": ["number", "null"]},
    "trace_id": {"type": "string", "minLength": 8}
  },
  "required": [
    "schema_version",
    "ts",
    "symbol",
    "fee",
    "components",
    "bounds",
    "cooldown"
  ],
  "additionalProperties": false
}

