{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MBP Quote",
  "type": "object",
  "required": ["quote_id", "market_id", "price", "quote_ts", "status"],
  "properties": {
    "quote_id": {
      "type": "string",
      "pattern": "^q_[0-9a-f]{16}$"
    },
    "market_id": {
      "type": "string",
      "pattern": "^m_[0-9a-f]{16}$"
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "quote_ts": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["active", "expired", "cancelled"]
    }
  },
  "additionalProperties": false
}
