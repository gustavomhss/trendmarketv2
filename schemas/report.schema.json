{
  "$id": "https://trendmarketv2.local/schemas/report.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Scorecard Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "schema_version",
    "timestamp_utc",
    "status",
    "summary",
    "metrics",
    "inputs",
    "bundle"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.sprint6.report"
    },
    "schema_version": {
      "type": "integer",
      "const": 2
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["total", "passing", "failing"],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "passing": {
          "type": "integer",
          "minimum": 0
        },
        "failing": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "quorum_ratio",
        "failover_time_p95_s",
        "staleness_p95_s",
        "cdc_lag_p95_s",
        "divergence_pct"
      ],
      "properties": {
        "quorum_ratio": {"$ref": "#/definitions/metric_entry"},
        "failover_time_p95_s": {"$ref": "#/definitions/metric_entry"},
        "staleness_p95_s": {"$ref": "#/definitions/metric_entry"},
        "cdc_lag_p95_s": {"$ref": "#/definitions/metric_entry"},
        "divergence_pct": {"$ref": "#/definitions/metric_entry"}
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["thresholds", "metrics"],
      "properties": {
        "thresholds": {"$ref": "#/definitions/input_descriptor"},
        "metrics": {"$ref": "#/definitions/input_descriptor"}
      }
    },
    "bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sha256"],
      "properties": {
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    }
  },
  "definitions": {
    "metric_entry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "observed",
        "target",
        "delta",
        "comparison",
        "unit",
        "sample_size",
        "window",
        "ok",
        "formatted_observed",
        "formatted_target",
        "guidance"
      ],
      "properties": {
        "observed": {"type": "string"},
        "target": {"type": "string"},
        "delta": {"type": "string"},
        "comparison": {"type": "string", "enum": ["gte", "lte"]},
        "unit": {"type": "string", "enum": ["ratio", "seconds", "percent"]},
        "sample_size": {"type": "integer", "minimum": 1},
        "window": {"type": "string", "minLength": 1},
        "ok": {"type": "boolean"},
        "formatted_observed": {"type": "string"},
        "formatted_target": {"type": "string"},
        "guidance": {"type": "string"}
      }
    },
    "input_descriptor": {
      "type": "object",
      "additionalProperties": true,
      "required": ["schema", "schema_version", "timestamp_utc"],
      "properties": {
        "schema": {"type": "string"},
        "schema_version": {"type": "integer"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    }
  }
}
