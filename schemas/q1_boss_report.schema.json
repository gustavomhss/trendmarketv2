{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Q1 Boss Final Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "timestamp_utc",
    "status",
    "sprints",
    "bundle_sha256"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "minimum": 1
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    },
    "sprints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["s1", "s2", "s3", "s4", "s5", "s6"],
      "properties": {
        "s1": { "$ref": "#/$defs/stage" },
        "s2": { "$ref": "#/$defs/stage" },
        "s3": { "$ref": "#/$defs/stage" },
        "s4": { "$ref": "#/$defs/stage" },
        "s5": { "$ref": "#/$defs/stage" },
        "s6": { "$ref": "#/$defs/stage" }
      }
    },
    "bundle_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  },
  "$defs": {
    "stage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "notes"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PASS", "FAIL"]
        },
        "notes": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
