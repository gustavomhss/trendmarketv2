{
  "$id": "https://trendmarketv2.local/schemas/q1_boss_report.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Q1 Boss Final Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "schema_version",
    "timestamp_utc",
    "status",
    "stages",
    "bundle"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.q1.boss.report"
    },
    "schema_version": {
      "type": "integer",
      "const": 2
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL"]
    },
    "stages": {
      "type": "object",
      "additionalProperties": false,
      "required": ["s1", "s2", "s3", "s4", "s5", "s6"],
      "properties": {
        "s1": {"$ref": "#/definitions/stage_summary"},
        "s2": {"$ref": "#/definitions/stage_summary"},
        "s3": {"$ref": "#/definitions/stage_summary"},
        "s4": {"$ref": "#/definitions/stage_summary"},
        "s5": {"$ref": "#/definitions/stage_summary"},
        "s6": {"$ref": "#/definitions/stage_summary"}
      }
    },
    "bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sha256"],
      "properties": {
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    }
  },
  "definitions": {
    "stage_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "notes", "variants"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PASS", "FAIL"]
        },
        "notes": {
          "type": "string"
        },
        "variants": {
          "type": "object",
          "additionalProperties": false,
          "required": ["primary", "clean"],
          "properties": {
            "primary": {"$ref": "#/definitions/variant_summary"},
            "clean": {"$ref": "#/definitions/variant_summary"}
          }
        }
      }
    },
    "variant_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status", "notes", "timestamp_utc"],
      "properties": {
        "status": {"type": "string", "enum": ["PASS", "FAIL"]},
        "notes": {"type": "string"},
        "timestamp_utc": {"type": "string", "format": "date-time"}
      }
    }
  }
}
