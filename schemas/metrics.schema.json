{
  "$id": "https://trendmarketv2.local/schemas/metrics.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Metrics Static",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "version",
    "timestamp_utc",
    "quorum_ratio",
    "failover_time_p95_s",
    "staleness_p95_s",
    "cdc_lag_p95_s",
    "divergence_pct"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.sprint6.metrics.v1"
    },
    "version": {
      "type": "integer",
      "const": 1
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "quorum_ratio": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "failover_time_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "staleness_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "cdc_lag_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "divergence_pct": {
      "type": "number",
      "minimum": 0.0
    }
  }
}
