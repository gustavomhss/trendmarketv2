{
  "$id": "https://trendmarketv2.local/schemas/metrics.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Metrics",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "schema_version",
    "timestamp_utc",
    "quorum_ratio",
    "failover_time_p95_s",
    "staleness_p95_s",
    "cdc_lag_p95_s",
    "divergence_pct"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.sprint6.metrics"
    },
    "schema_version": {
      "type": "integer",
      "const": 2
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "quorum_ratio": {
      "$ref": "#/definitions/metric"
    },
    "failover_time_p95_s": {
      "$ref": "#/definitions/metric"
    },
    "staleness_p95_s": {
      "$ref": "#/definitions/metric"
    },
    "cdc_lag_p95_s": {
      "$ref": "#/definitions/metric"
    },
    "divergence_pct": {
      "$ref": "#/definitions/metric"
    }
  },
  "definitions": {
    "metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["observed", "unit", "sample_size", "window"],
      "properties": {
        "observed": {
          "type": "number",
          "minimum": 0.0
        },
        "unit": {
          "type": "string",
          "enum": ["ratio", "seconds", "percent"]
        },
        "sample_size": {
          "type": "integer",
          "minimum": 1
        },
        "window": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
