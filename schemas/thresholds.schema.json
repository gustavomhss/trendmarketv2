{
  "$id": "https://trendmarketv2.local/schemas/thresholds.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Thresholds",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "timestamp_utc",
    "metrics"
    "quorum_ratio",
    "failover_time_p95_s",
    "staleness_p95_s",
    "cdc_lag_p95_s",
    "divergence_pct"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "quorum_ratio",
        "failover_time_p95_s",
        "staleness_p95_s",
        "cdc_lag_p95_s",
        "divergence_pct"
      ],
      "properties": {
        "quorum_ratio": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "comparison",
            "target"
          ],
          "properties": {
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "comparison": {
              "type": "string",
              "const": "gte"
            },
            "target": {
              "type": "number",
              "minimum": 0.0,
              "maximum": 1.0
            }
          }
        },
        "failover_time_p95_s": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "comparison",
            "target"
          ],
          "properties": {
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "comparison": {
              "type": "string",
              "const": "lte"
            },
            "target": {
              "type": "number",
              "minimum": 0.0
            }
          }
        },
        "staleness_p95_s": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "comparison",
            "target"
          ],
          "properties": {
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "comparison": {
              "type": "string",
              "const": "lte"
            },
            "target": {
              "type": "number",
              "minimum": 0.0
            }
          }
        },
        "cdc_lag_p95_s": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "comparison",
            "target"
          ],
          "properties": {
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "comparison": {
              "type": "string",
              "const": "lte"
            },
            "target": {
              "type": "number",
              "minimum": 0.0
            }
          }
        },
        "divergence_pct": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "version",
            "comparison",
            "target"
          ],
          "properties": {
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "comparison": {
              "type": "string",
              "const": "lte"
            },
            "target": {
              "type": "number",
              "minimum": 0.0
            }
          }
        }
      }
    "quorum_ratio": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "failover_time_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "staleness_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "cdc_lag_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "divergence_pct": {
      "type": "number",
      "minimum": 0.0
    }
  }
}
