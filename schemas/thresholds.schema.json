{
  "$id": "https://trendmarketv2.local/schemas/thresholds.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 6 Thresholds",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "schema_version",
    "timestamp_utc",
    "quorum_ratio",
    "failover_time_p95_s",
    "staleness_p95_s",
    "cdc_lag_p95_s",
    "divergence_pct"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "trendmarketv2.sprint6.thresholds"
    },
    "schema_version": {
      "type": "integer",
      "const": 2
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "quorum_ratio": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "failover_time_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "staleness_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "cdc_lag_p95_s": {
      "type": "number",
      "minimum": 0.0
    },
    "divergence_pct": {
      "type": "number",
      "minimum": 0.0
    }
  }
}
